<resources>


    <!-- Base application theme. -->
    <style name="applicationTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeWithTranslucentStatus" parent="applicationTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="route_search_tablayout_style">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="applicationTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="applicationTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
